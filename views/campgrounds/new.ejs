<% layout('layout/boilerplate') %> 
<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campground" method = "post" novalidate class="validatedForm" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="name">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="name" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        </div>
                        <input type="text" name="campground[price]" class="form-control" id="price" placeholder="0.00" aria-label="Username" aria-describedby="basic-addon1" required> 
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
            </div>
            <input type="file" name="campground[image]" id="" multiple>
            <!-- <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" name="campground[image]" id="image" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description" required></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add campground</button>
            </div>
               
            
        </form>
    </div>
</div>


    